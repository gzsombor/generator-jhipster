package <%= packageName %>.service.mapper;

import java.util.Objects;
<%_ if (primaryKey.type === 'UUID') { _%>
import java.util.UUID;
<%_ } _%>

import javax.persistence.EntityManager;

import org.springframework.stereotype.Service;

import <%= packageName %>.domain.<%= asEntity(entityClass) %>;
import <%= packageName %>.service.dto.RequiredIdDTO;
import <%= packageName %>.service.dto.UpdateIdDTO;

@Service
public class <%= asEntity(entityClass) %>Loader {
    private final EntityManager entityManager;

    public <%= asEntity(entityClass) %>Loader(EntityManager entityManager) {
        this.entityManager = entityManager;
    }

    public <%= asEntity(entityClass) %> load(RequiredIdDTO<<%= primaryKey.type %>> dto) {
        return loadNonNull(dto.getId());
    }

    public <%= asEntity(entityClass) %> load(UpdateIdDTO<<%= primaryKey.type %>> dto) {
        if (dto != null && dto.getId() != null) {
            return loadNonNull(dto.getId());
        }
        return null;
    }

    /**
     * Loads <%= asEntity(entityClass) %> based on their id field.
     * If id is null, it will return null.
     * If there is no entity with the given id, it will throw an exception!
     */
    public <%= asEntity(entityClass) %> load(<%= primaryKey.type %> id) {
        if (id != null) {
            return loadNonNull(id);
        }
        return null;
    }

    /**
     * Loads <%= asEntity(entityClass) %> based on their id field. If id is null or there is no entity with the given id, it will throw an exception!
     */
    public <%= asEntity(entityClass) %> loadNonNull(<%= primaryKey.type %> id) {
        return Objects.requireNonNull(entityManager.find(<%= asEntity(entityClass) %>.class, id), "Missing <%= asEntity(entityClass) %> with id =" + id);
    }
}
